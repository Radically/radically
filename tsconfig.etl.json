{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      // we want to share types with the frontend!
      "./src/types",
      "./etl/types"
    ],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    // "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": [
    "src/",
    "etl/"
  ],
  "exclude": [
    "node_modules"
  ]
}